! Map Caplock as Control and Control as Escape
remove Lock = Caps_Lock
remove Control = Control_L
keycode 66 = Control_L
keycode 37 = Escape
add Control = Control_L

! Enforce good shift behaviors
clear Shift
add Shift = Shift_L
keycode 62 = Mode_switch

